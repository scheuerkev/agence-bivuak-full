header#blog-header
    .container-fluid
        .carousel.slide#carouselIndicators(data-bs-ride="carousel")
            .carousel-indicators
                button(type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1")
                button(type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="1" aria-label="Slide 2")
                button(type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="2" aria-label="Slide 3")
        .carousel-inner
            .carousel-item.active
                img(src="..." class="d-block w-100" alt="...")
            .carousel-item
                img(src="..." class="d-block w-100" alt="...")        
            .carousel-item
                img(src="..." class="d-block w-100" alt="...")
        button.carousel-control-prev(type="button" data-bs-target="#carouselIndicators" data-bs-slide="prev")
            span.carousel-control-prev-icon(aria-hidden="true")
            span.visually-hidden Previous
        button.carousel-control-next(type="button" data-bs-target="#carouselIndicators" data-bs-slide="next")
            span.carousel-control-next-icon(aria-hidden="true")
            span.visually-hidden Next